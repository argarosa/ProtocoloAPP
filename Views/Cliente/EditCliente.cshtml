@page
@model ProtocoloApp.Views.Cliente.EditClienteModel
	   ProtocoloApp.Models.Cliente
@{
    <h2>Editar Cliente</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="IdCliente" />
        <div>
            <label>Nome</label>
            <input asp-for="Nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div>
            <label>Email</label>
            <input asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label>Telefone</label>
            <input asp-for="Telefone" required />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div>
            <label>Endereco</label>
            <input asp-for="Endereco" required />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <button type="submit">Salvar</button>
    </form>
}
