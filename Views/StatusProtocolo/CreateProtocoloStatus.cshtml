@model ProtocoloApp.Models.StatusProtocolo

@{
    ViewData["Title"] = "Criar Status de Protocolo";
}

<h1>Criar Status de Protocolo</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NomeStatus" class="control-label"></label>
        <input asp-for="NomeStatus" class="form-control" />
        <span asp-validation-for="NomeStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Voltar</a>